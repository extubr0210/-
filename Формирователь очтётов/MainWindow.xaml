<Window x:Class="Формирователь_очтётов.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Формирователь_очтётов"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            
            <Grid >
                <StackPanel>
                    <Button Content="Главная" Click="Button_Главная"></Button>
                    <Button Content="Настройки отчётов" ></Button>
                    <Button Content="Настройки приложения" ></Button>
                    <Button Content="Дополнительно" ></Button>
                </StackPanel>
            </Grid>
        </Grid>
        <TextBlock Text="Формирователь отчётов" TextAlignment="Center" VerticalAlignment="Bottom" FontSize="16" Foreground="Aquamarine"  Grid.Row="0"></TextBlock>
    </Grid>
</Window>
